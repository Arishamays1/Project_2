<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %>

<body>

    <div class="showHandlePage">

    <div class="showHandleNav">
        <%- include('../partials/nav.ejs')%>
    </div>

    <div class="showHandleHeader">
        <h1>Elon Musk's Twitter | Show Profile</h1>
    </div>

    <div class="showProfile">
        <h2> @<%= oneProfile.handle %></h2>
    </div>

    <div class="profileTweetsSection">
        <% for (let i =0; i < profileTweets.length; i++) { %>
            <div class="profileTweets">
                <h2>@<%= oneProfile.handle %></h2>
                <h3><a href="/tweets/<%= profileTweets[i]._id %>"><%= profileTweets[i].text %></a></h3>
                <h4 style="color:red;"><%= profileTweets[i].createdAt.toString().substring(0, 24) %></h4>
                <% } %>
            </div>
            
    </div>
        
    </div>

</body>