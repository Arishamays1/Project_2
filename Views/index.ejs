<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs') %>

<body>
    <div class="indexPage">

    <div class="indexNav">
        <%- include('partials/nav.ejs')%>
    </div>

    <div class="indexHeader">
        <h1>Elon Musk's Twitter</h1>
    </div>

    <div class="timeline">
        <% for (let i = 0; i < tweet.length; i++) { %>
           <% const oneTweet = tweet[i] %>
           
           <div class="tweet">
            <!-- ----PROFILE SHOW ROUTE---- -->
            <h2>@<a href="/profiles/<%= oneTweet.handle._id %>"><%= oneTweet.handle.handle %></a></h2>
            <!-- ----TWEET SHOW ROUTE---- -->
            <h3><a href="/tweets/<%= oneTweet._id %>"><%= oneTweet.text %></a></h3>
            <h4><%= oneTweet.createdAt %></h4>
           </div>
           
        <% } %>
    </div>
    
</div>


</body>
</html>